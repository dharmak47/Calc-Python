name: OWASP ZAP Dynamic Scan

on:
  push:
    branches:
      - main
  pull_request:
    types: [opened, synchronize, reopened]
  schedule:
    - cron: '0 0 * * *'      # Nightly scan at 00:00 UTC

jobs:
  zap_scan:
    runs-on: ubuntu-latest

    steps:
      # Checkout your code
      - uses: actions/checkout@v4

      # Set up Python
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.12'

      # Install Flask and start server in background
      - name: Install dependencies and start app
        run: |
          pip install flask
          nohup python src/main.py &
      
      # Wait for Flask API to start
      - name: Wait for Flask API
        run: sleep 10

      # Run OWASP ZAP Full Scan
      - name: ZAP Full Scan
        uses: zaproxy/action-full-scan@v0.13.0
        with:
          target: 'http://localhost:5000/'
          allow_issue_writing: false
          rules_file_name: ''
          # DO NOT include artifact_name input!
